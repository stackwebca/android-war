<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/viewBonusRound"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_light"
    tools:context="com.jrsm.war.bonusRound">

    <TextView
        android:id="@+id/textView"
        android:layout_width="287dp"
        android:layout_height="54dp"
        android:layout_marginStart="62dp"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="63dp"
        android:layout_marginRight="63dp"
        android:gravity="center|center_horizontal"
        android:text="About War"
        android:textColor="@android:color/background_light"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView10" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="371dp"
        android:layout_height="131dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Each player turns up a card one after the other, you are playing against android.  The player with the higher card keeps the points for the face value of their card and then it is turned face down, on the bottom of his/her opposite stack. If the cards are the same rank, it is War.  During the round of war Android will deal a card to itself and to the player and whomever has the highest card will win bonus points. This game will run until the player gives up.  There is also a trivia game, test your knowledge and play some Trivia.  There is no point to this game except to curb your boredom."
                android:textColor="@android:color/background_light"
                tools:text="Each player turns up a card one after the other, you are playing against android.  The player with the higher card keeps the points for the face value of their card and then it is turned face down, on the bottom of his/her opposite stack. If the cards are the same rank, it is War.  During the round of war Android will deal a card to itself and to the player and whomever has the highest card will win bonus points. This game will run until the player gives up.  There is also a trivia game, test your knowledge and play some Trivia.  There is no point to this game except to curb your boredom." />

        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="436dp"
        android:layout_height="127dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gametitle" />

    <Button
        android:id="@+id/contact"
        android:layout_width="95dp"
        android:layout_height="42dp"
        android:layout_marginEnd="29dp"
        android:layout_marginRight="29dp"
        android:background="@drawable/contact"
        android:onClick="contactUs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView" />

    <Button
        android:id="@+id/button2"
        android:layout_width="95dp"
        android:layout_height="42dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/playtrivia"
        android:onClick="goTrivia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView" />

    <Button
        android:id="@+id/button6"
        android:layout_width="69dp"
        android:layout_height="38dp"
        android:background="@drawable/back"
        android:onClick="quit"
        app:layout_constraintBottom_toBottomOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="@+id/button2"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="@+id/button2" />

</androidx.constraintlayout.widget.ConstraintLayout>